@model List<AdminControllerRoleAssignViewModel>

@{
    ViewData["Title"] = "AssignRole";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="container" style="margin-left:45%; margin-top:20%;">
    <div class="row">
        <form method="post">
            @for (int i = 0; i < Model.Count; i++)
            {
                <div class="form-check">
                    <input type="hidden" asp-for="@Model[i].Id" />
                    <input type="hidden" asp-for="@Model[i].Name" />
                    <input type="checkbox" asp-for="@Model[i].Exists" class="form-chech-input" />
                    <label style="font-size:15px;" class="form-check-label" for="@Model[i].Exists">@Model[i].Name</label>
                </div>
            }
            <br />
            <button class="btn btn-info">Değişiklikleri Kaydet</button>

            <a href="/Admin/AdminRol/UserRoleList" class="btn btn-secondary btn-sm">Listeye Dön</a>
        </form>
    </div>
</div>

<br />

