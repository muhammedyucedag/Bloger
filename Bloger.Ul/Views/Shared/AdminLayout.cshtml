@{
    Layout = null;
}

<!DOCTYPE html>
<html>

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>LastBlog | Yönetici Paneli</title>

    <link href="~/admin-panel/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/admin-panel/font-awesome/css/font-awesome.css" rel="stylesheet">
    <link href="~/admin-panel/css/plugins/iCheck/custom.css" rel="stylesheet">
    <link href="~/admin-panel/css/animate.css" rel="stylesheet">
    <link href="~/admin-panel/css/style.css" rel="stylesheet">



</head>

<body>

    <div id="wrapper">

        @await Html.PartialAsync("~/Views/Admin/AdminNavbarPartial.cshtml")

        <div id="page-wrapper" class="gray-bg">
            <div class="row border-bottom">
                <nav class="navbar navbar-static-top" role="navigation" style="margin-bottom: 0">
                    <div class="navbar-header">
                        <a class="navbar-minimalize minimalize-styl-2 btn btn-primary " href="#"><i class="fa fa-bars"></i> </a>

                    </div>
                    <ul class="nav navbar-top-links navbar-right">
                        <li>
                            <span class="m-r-sm text-muted welcome-message">LastBlog Yönetici Paneline Hoşgeldin.</span>
                        </li>
                        <li>
                            <a href="/login/logoff/">
                                <i class="fa fa-sign-out"></i> Çıkış Yap
                            </a>
                        </li>
                    </ul>

                </nav>
            </div>
            <div class="wrapper wrapper-content animated fadeInRight">
                @RenderBody()
            </div>
        </div>
    </div>



    <!-- Mainly scripts -->
    <script src="~/admin-panel/js/jquery-3.1.1.min.js"></script>
    <script src="~/admin-panel/js/popper.min.js"></script>
    <script src="~/admin-panel/js/bootstrap.js"></script>
    <script src="~/admin-panel/js/plugins/metisMenu/jquery.metisMenu.js"></script>
    <script src="~/admin-panel/js/plugins/slimscroll/jquery.slimscroll.min.js"></script>

    <!-- Peity -->
    <script src="~/admin-panel/js/plugins/peity/jquery.peity.min.js"></script>

    <!-- Custom and plugin javascript -->
    <script src="~/admin-panel/js/inspinia.js"></script>
    <script src="~/admin-panel/js/plugins/pace/pace.min.js"></script>

    <!-- iCheck -->
    <script src="~/admin-panel/js/plugins/iCheck/icheck.min.js"></script>

    <!-- Peity -->
    <script src="~/admin-panel/js/demo/peity-demo.js"></script>

    <script>
        $(document).ready(function () {
            $('.i-checks').iCheck({
                checkboxClass: 'icheckbox_square-green',
                radioClass: 'iradio_square-green',
            });
        });
    </script>

</body>

</html>