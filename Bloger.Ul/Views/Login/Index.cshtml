@model UserSignInViewModel
@{
    Layout = null;
}

<!doctype html>
<html lang="en">
<head>
    <title>Login 04</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link href="https://fonts.googleapis.com/css?family=Lato:300,400,700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/Login/css/style.css">

</head>

<body>
    <section class="ftco-section">
        <div class="container">

            <div class="row justify-content-center">
                <div class="col-md-12 col-lg-10">
                    <div class="wrap d-md-flex">
                        <div class="img" style="background-image:url(/Login/images/Blog.jpg);">
                        </div>
                        <div class="login-wrap p-4 p-md-5">
                            <div class="d-flex">
                                <div class="w-100">
                                    <h3 class="mb-4">Giriş Yap</h3>
                                </div>
                                <div class="w-100">
                                    <p class="social-media d-flex justify-content-end">
                                        <a href="#" class="social-icon d-flex align-items-center justify-content-center"><span class="fa fa-facebook"></span></a>
                                        <a href="#" class="social-icon d-flex align-items-center justify-content-center"><span class="fa fa-twitter"></span></a>
                                    </p>
                                </div>
                            </div>

                            <form action="#" method="post">
                                <div>
                                    @if (ViewData.ContainsKey("Error"))
                                    {
                                        <div style="color:red">
                                            <span>@ViewData["Error"]</span>
                                        </div>
                                    }
                                </div>
                                <div class="form-group mb-3">
                                    <span asp-validation-for="username" class="text-danger"></span>
                                    <label class="label" for="username">Kullanıcı Adı</label>
                                    <input type="text" class="form-control" asp-for="@Model.username" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Kullanıcı Adı" required>
                                </div>
                                <div class="form-group mb-3">
                                    <span asp-validation-for="password" class="text-danger"></span>
                                    <label class="label" for="password">Şifre</label>
                                    <input type="password" class="form-control" asp-for="@Model.password" id="exampleInputPassword1" placeholder="Şifre" required>
                                </div>
                                <div class="form-group">
                                    <button type="submit" class="form-control btn btn-primary rounded submit px-3">Giriş Yap</button>
                                </div>
                                <div class="form-group d-md-flex">
                                    <div class="w-50 text-left">
                                        <label class="checkbox-wrap checkbox-primary mb-0">
                                            Beni Hatırla
                                            <input type="checkbox" checked>
                                            <span class="checkmark"></span>
                                        </label>
                                    </div>
                                    <div class="w-50 text-md-right">
                                        <a href="#">Şifreni Mi Unuttun?</a>
                                    </div>
                                </div>
                            </form>
                            <p class="text-center">Üye Değil Misin? <a href="/Register/Index">Kayıt Ol</a></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <script src="~/Login/js/jquery.min.js"></script>
    <script src="~/Login/js/popper.js"></script>
    <script src="~/Login/js/bootstrap.min.js"></script>
    <script src="~/Login/js/main.js"></script>

</body>
</html>