@model UserUpdateViewModel
@{
    ViewData["Title"] = "UserEditProfile";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

<div class="section-header">
    <h2>Profil Bilgini Düzenle</h2>
</div>

<div class="col-6 grid-margin stretch-card" style="margin-left:25%">
    <div class="card">
        <div class="card-body">
            <h5 class="card-title text-center">Yazar Profil Bilgileri</h5>
            <br />
            <form class="forms-sample" method="post">
                <div class="form-group mt-2">
                    <label class="mb-2" for="exampleInputName1">Yazar Ad Soyad</label>
                    <input type="text" class="form-control" asp-for="@Model.namesurname" placeholder="Name">
                </div>
                <div class="form-group mt-4">
                    <label class="mb-2" for="exampleInputName1">Kullanıcı Adı</label>
                    <input type="text" class="form-control" asp-for="@Model.username" placeholder="Name">
                </div>
                <div class="form-group mt-4">
                    <label class="mb-2" for="exampleInputEmail3">Mail Adresi</label>
                    <input type="email" class="form-control" asp-for="@Model.mail" placeholder="Email">
                </div>
                <div class="form-group mt-4">

                    <label class="mb-2" for="exampleInputEmail3">Yeni Şifre</label>
                    <input type="text" class="form-control" asp-for="@Model.password" placeholder="Yeni Şifre">
                    <div class="form-check mt-4">
                        <input type="checkbox" id="flexCheckChecked" asp-for="@Model.changepassword">
                        <label for="flexCheckChecked">
                            Şifremi Değiştirmek istemiyorum
                        </label>
                    </div>
                </div>
                <button type="submit" class="btn btn-secondary mr-2 mt-3">Güncelle</button>
                <button asp-action="index" asp-controller="dashboard" class="btn btn-danger mt-3">İptal</button>
            </form>

        </div>
    </div>
</div>

