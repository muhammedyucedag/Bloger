@model UserDetailViewModel

@inject SignInManager<User> signInManager


@if (signInManager.IsSignedIn(User))
{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}
else
{

    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_UserLayout.cshtml";


}

<style>
    .portfolio-info h4 a {
        color: #222222;
        font-size: 18px;
        font-weight: 600;
    }

        .portfolio-info h4 a:hover {
            color: #eb5f42;
        }

    .portfolio-info p {
        color: #6c757d;
        font-size: 14px;
        margin-bottom: 0;
        padding-right: 50px;
    }

    }
</style>

<!DOCTYPE html>
<html lang="en">
<body>

    <section class="section-padding">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-md-12 col-sm-12 col-xs-12">
                    <div class="row ">

                        @foreach (var item in Model.Blogs)
                        {
                            <div class="col-lg-6 col-md-6">
                                <article class="post-grid mb-5">
                                    <div class="post-thumb mb-4">
                                        <img src="@item.BlogImage" alt="" style="height:270px; width:360px;">
                                    </div>
                                    <div class="portfolio-info">


                                        <p style="text-decoration:none;" title="More Details">@item.Category.CategoryName</p>

                                        <h4 class="post-title mt-1"><a href="blog-single.html">@item.BlogTitle</a></h4>

                                        <p>
                                            @{
                                                if (item.BlogContent.Length < 130)
                                                {
                                                    @item.BlogContent

                                                }
                                                else
                                                {
                                                    @item.BlogContent.Substring(0,130)

                                                }
                                            }...
                                        </p>
                                        <br>
                                        <p class="post-date">
                                            <i class="bi bi-clock"></i> <time>@(((DateTime)item.BlogCreateDate).ToString("dd-MM-yyyy"))</time>
                                        </p>
                                    </div>
                                </article>
                            </div>
                        }

                    </div>
                </div>
                <div class="col-lg-4 col-md-6 col-sm-12 col-xs-12">
                    <div class="sidebar sidebar-right">
                        <div class="sidebar-wrap mt-5 mt-lg-0">
                            <div class="sidebar-widget about mb-5 text-center p-3">
                                <div class="about-author">
                                    <img src="~/socialmediatemplate/images/author.jpg" alt="" class="img-fluid">
                                </div>

                                <h4 class="mb-0 mt-4">@Model.User.NameSurname</h4>

                                <p>@Model.User.UserName</p>
                                <p>
                                    @{
                                        if (Model.User.CoverLetter.Length < 130)
                                        {
                                            @Model.User.CoverLetter

                                        }
                                        else
                                        {
                                            @Model.User.CoverLetter.Substring(0,130)

                                        }
                                    }
                                </p>
                                <img src="~/socialmediatemplate/images/logo.png" alt="" class="img-fluid">
                            </div>

                            <div class="sidebar-widget mb-5 ">
                                <h4 class="text-center widget-title">Trending Posts</h4>

                                <div class="sidebar-post-item-big">
                                    <a href="blog-single.html"><img src="~/socialmediatemplate/images/news/img-1.jpg" alt="" class="img-fluid"></a>
                                    <div class="mt-3 media-body">
                                        <span class="text-muted letter-spacing text-uppercase font-sm">September 10, 2019</span>
                                        <h4><a href="blog-single.html">Meeting With Clarissa, Founder Of Purple Conversation App</a></h4>
                                    </div>
                                </div>

                                <div class="media border-bottom py-3 sidebar-post-item">
                                    <a href="#"><img class="mr-4" src="~/socialmediatemplate/images/news/thumb-1.jpg" alt=""></a>
                                    <div class="media-body">
                                        <span class="text-muted letter-spacing text-uppercase font-sm">September 10, 2019</span>
                                        <h4><a href="blog-single.html">Thoughtful living in los Angeles</a></h4>
                                    </div>
                                </div>

                                <div class="media py-3 sidebar-post-item">
                                    <a href="#"><img class="mr-4" src="~/socialmediatemplate/images/news/thumb-2.jpg" alt=""></a>
                                    <div class="media-body">
                                        <span class="text-muted letter-spacing text-uppercase font-sm">September 10, 2019</span>
                                        <h4><a href="blog-single.html">Vivamus molestie gravida turpis.</a></h4>
                                    </div>
                                </div>
                            </div>


                            <div class="sidebar-widget category mb-5">
                                <h4 class="text-center widget-title">Catgeories</h4>
                                <ul class="list-unstyled">
                                    <li class="align-items-center d-flex justify-content-between">
                                        <a href="#">Innovation</a>
                                        <span>14</span>
                                    </li>
                                    <li class="align-items-center d-flex justify-content-between">
                                        <a href="#">Software</a>
                                        <span>2</span>
                                    </li>
                                    <li class="align-items-center d-flex justify-content-between">
                                        <a href="#">Social</a>
                                        <span>10</span>
                                    </li>
                                    <li class="align-items-center d-flex justify-content-between">
                                        <a href="#">Trends</a>
                                        <span>5</span>
                                    </li>
                                </ul>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <script src="~/socialmediatemplate/plugins/jquery/jquery.js"></script>
    <!-- Bootstrap jQuery -->
    <script src="~/socialmediatemplate/plugins/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/socialmediatemplate/plugins/bootstrap/js/popper.min.js"></script>
    <!-- Owl caeousel -->
    <script src="~/socialmediatemplate/plugins/owl-carousel/owl.carousel.min.js"></script>
    <script src="~/socialmediatemplate/plugins/slick-carousel/slick.min.js"></script>
    <script src="~/socialmediatemplate/plugins/magnific-popup/magnific-popup.js"></script>
    <!-- Instagram Feed Js -->
    <script src="~/socialmediatemplate/plugins/instafeed-js/instafeed.min.js"></script>
    <!-- Google Map -->
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCC72vZw-6tGqFyRhhg5CkF2fqfILn2Tsw"></script>
    <script src="~/socialmediatemplate/plugins/google-map/gmap.js"></script>
    <!-- main js -->
    <script src="~/socialmediatemplate/js/custom.js"></script>


</body>
</html>

